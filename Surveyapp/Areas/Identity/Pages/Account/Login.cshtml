@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    @if (TempData["ConfirmMessage"] != null)
    {
        <p style="color: red">@TempData["ConfirmMessage"]</p>
    }
    <div class="col-md-5">
        <section>
            <form id="account" method="post">

                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.EmailOrNo"></label>
                    <input asp-for="Input.EmailOrNo" class="form-control" />
                    <span asp-validation-for="Input.EmailOrNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use other account manager service to log in.</h4>
            <hr />
            @*<a type="submit" class="btn btn-primary" asp-action="ExternalLogin" asp-controller="ManageUsers"
            value="University Account" title="Log in using your University Account">
            <img src="~/img/dekut.png" alt="" style="width: 20%;height: 1%">
            University Account
            </a>*@
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a
                                href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                        class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <br />
                                    <br />
                                    if (provider.DisplayName == "University Account")
                                    {
                                        <button type="submit" style="width: 80%;" class="btn btn-primary" name="provider"
                                            value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            <img src="~/img/dekut.png" alt="" style="width: 20%;">
                                            @provider.DisplayName
                                        </button>
                                    }
                                    else
                                    {
                                        @* <button type="submit" style="width: 80%;" class="btn btn-primary" name="provider"
                        value="@provider.Name" title="Log in using your @provider.DisplayName account">
                        <img src="~/img/7123025_logo_google_g_icon.png" alt="" style="width: 8%;">
                        @provider.DisplayName
                        </button> *@
                                    }
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}